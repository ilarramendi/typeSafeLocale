{
	"compilerOptions": {
		"target": "ESNext",
		"module": "ESNext",
		"declaration": true,
		"outDir": "dist",
		"moduleResolution": "Node",
		"esModuleInterop": true,
		"strict": true,
		"skipLibCheck": true,
		"declarationMap": true,
		"jsx": "react-jsx"
	},
	"include": [
		"src/**/*.ts",
		"index.ts"
	],
	"exclude": [
		"node_modules"
	]
}