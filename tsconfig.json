{
	"compilerOptions": {
		"target": "es2017",
		"lib": [
			"es2017",
			"dom"
		],
		"module": "commonjs",
		"strict": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"outDir": "./dist"
	},
	"include": [
		"src/**/*"
	],
	"exclude": [
		"node_modules"
	]
}