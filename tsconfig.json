{
	"compilerOptions": {
		"target": "ESNext",
		"module": "ESNext",
		"declaration": true,
		"outDir": "dist",
		"moduleResolution": "bundler",
		"esModuleInterop": true,
		"strict": true,
		"allowImportingTsExtensions": false,
		"noEmit": false,
		"skipLibCheck": true,
		"declarationMap": true,
		"jsx": "react-jsx"
	},
	"include": [
		"src/**/*.ts"
	],
	"exclude": [
		"node_modules",
		"dist"
	]
}