{
	"compilerOptions": {
		"target": "ESNext",
		"lib": [
			"ESNext",
			"dom"
		],
		"jsx": "react-jsx",
		"module": "commonjs",
		"strict": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"outDir": "./dist"
	},
	"include": [
		"src/**/*"
	],
	"exclude": [
		"node_modules"
	]
}